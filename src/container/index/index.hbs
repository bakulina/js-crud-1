<div class="form" >
  <h1 class="form_title">Інформація про товар</h1>
 <form method="POST" action="/product-create">
  <div class="form_content">
<div class="form_field">
  <lable for="name"class="form_lable">Назва товару</lable>
  <input type="text" class="form_input">
</div>
<div class="form_field">
 <lable for="price"class="form_lable">Ціна</lable>
  <input type="text" class="form_input">
</div>
<div class="form_field">
 <lable for="description"class="form_lable">Короткій опис товара</lable>
  <input type="text" class="form_input">
  </div>
  <button class="form_button">Створити товар</button>
</div>
</div>
 </form>
</div>
 <section>
  <div class="form">
     <h1 class="form_title">список товара</h1>
     <div class="product-list">
     
      {{#with data.products}}
      {{#if isEmpty}}
      <mark> пустий</mark>
      {{else}}
      <ul>
      {{#each list}}
      <li>{{name}} | {{price}}|{{description}}|{{id}}<a href="/product-delete?id={{id}}">видилити</a> </li>
      {{/each}}
      </ul>
      {{/if}}
      {{/with}}
     </div>
  </div>
  </section>



